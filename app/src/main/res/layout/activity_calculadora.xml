<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.calculadora.ricky.calculadora.Calculadora">

    <TableLayout
        android:id="@+id/tabPantalla"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TableRow>

            <TextView
                android:id="@+id/lblDisplay2"
                android:layout_width="494dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/background_light"
                android:maxLength="30"
                android:maxLines="2"
                android:textAlignment="textEnd"
                android:textColor="@android:color/darker_gray"
                android:textSize="36sp" />
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/lblDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/background_light"
                android:maxLength="25"
                android:maxLines="2"
                android:text="0123456789.01234567890123"
                android:textAlignment="textEnd"
                android:textColor="@android:color/background_dark"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_height="139dp"
            android:layout_margin="0dp"
            android:padding="0dp">

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/darker_gray"
                android:onClick="teclearOperacion"
                android:text="/"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/darker_gray"
                android:onClick="teclearOperacion"
                android:text="*"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@color/colorPrimary"
                android:onClick="teclearLimpiar"
                android:text="C"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnDel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@color/colorPrimary"
                android:onClick="teclearExtras"
                android:text="DEL"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />
        </TableRow>
        <TableRow
            android:layout_margin="0dp"
            android:padding="0dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearNumero"
                android:text="7"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearNumero"
                android:text="8"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearNumero"
                android:text="9"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnMas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/darker_gray"
                android:onClick="teclearOperacion"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />
        </TableRow>

        <TableRow
            android:layout_margin="0dp"
            android:padding="0dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearNumero"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearNumero"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearNumero"
                android:text="6"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnMenos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/darker_gray"
                android:onClick="teclearOperacion"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />
        </TableRow>

        <TableRow
            android:layout_margin="0dp"
            android:padding="0dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearNumero"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearNumero"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearNumero"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btnIgual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/darker_gray"
                android:onClick="teclearIgual"
                android:text="="
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />
        </TableRow>
        <TableRow
            android:layout_margin="0dp"
            android:padding="0dp">

            <Button
                android:id="@+id/btnMasMenos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearExtras"
                android:text="+/-"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp"
                android:onClick="teclearNumero" />

            <Button
                android:id="@+id/btnPunto"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_gravity="clip_horizontal"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:onClick="teclearExtras"
                android:text="."
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

        </TableRow>
    </TableLayout>
</RelativeLayout>
